char[] rep(char old, char n, char[] str) {
    int i = 0;
    while(i < |str|) {
        if(str[i] == old) {
            str[i] = n;
        }
        i = i + 1;
    }
    return str;
}


void main() {
    char[] cs = ['h','e','l','l','o'];

    assert ['h','w','l','l','o'] == rep('e','w',cs);
    assert ['h','e','l','l','o'] == rep('H','z',cs);
    assert ['h','e','l','l','1'] == rep('o','1',cs);
}
